            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: #80bdff;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .fade-in {
        opacity: 0;
        transform: translateY(10px);
    }

    .fw-semibold {
        font-weight: 600;
    }
</style>
