@model InventorySystem.Models.User
@Html.AntiForgeryToken()
<head>

    <!-- Font Awesome (for the arrow icon) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Boxicons (for the password toggle icons) -->
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
</head>
<!-- Page Header with Go Back Icon -->
<div class="fade-in">
    @{
        var successMessage = TempData["SuccessMessage"];
        var errorMessage = TempData["ErrorMessage"];
    }
    <div class="d-flex align-items-center mb-4" style="width: 1000px; margin: 20px 0 0 26px;">
        <a asp-action="ProfilePage" class="text-decoration-none me-3 text-dark" title="Go Back">
            <i class="fa-solid fa-arrow-left fs-3"></i>
        </a>
        <h2 class="mb-0 fw-bold" style="font-size: 1.8rem; color: #343a40;">Change Password</h2>
    </div>

    <!-- Centered Form in a Card -->
    <div class="container d-flex justify-content-center" style="margin-bottom: 20px;">
        <div class="card shadow-sm p-4" style="width: 100%; max-width: 750px; border-radius: 12px; background-color: #ffffff;">
            <div class="card-body">
                <form asp-action="ChangePassword" method="post">
                    <!-- Current Password -->
                    <div class="form-group mb-4 position-relative">
                        <label for="CurrentPassword" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Current Password</label>
                        <input type="password" class="form-control form-control-lg" id="CurrentPassword" name="CurrentPassword" required>
                        <span class="toggle-password" onclick="togglePasswordVisibility('CurrentPassword', this)"
                              style="position: absolute; top: 38px; right: 15px; cursor: pointer;">
                            <i class="bx bx-hide"></i>
                        </span>
                    </div>

                    <!-- New Password -->
                    <div class="form-group mb-4 position-relative">
                        <label for="NewPassword" class="fw-semibold" style="font-size: 1.1rem; color: #555;">New Password</label>
                        <input type="password" class="form-control form-control-lg" id="NewPassword" name="NewPassword" required>
                        <span class="toggle-password" onclick="togglePasswordVisibility('NewPassword', this)"
                              style="position: absolute; top: 38px; right: 15px; cursor: pointer;">
                            <i class="bx bx-hide"></i>
                        </span>
                    </div>

                    <!-- Confirm New Password -->
                    <div class="form-group mb-4 position-relative">
                        <label for="ConfirmPassword" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Confirm New Password</label>
                        <input type="password" class="form-control form-control-lg" id="ConfirmPassword" name="ConfirmPassword" required>
                        <span class="toggle-password" onclick="togglePasswordVisibility('ConfirmPassword', this)"
                              style="position: absolute; top: 38px; right: 15px; cursor: pointer;">
                            <i class="bx bx-hide"></i>
                        </span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5" style="border-radius: 25px; font-size: 1.1rem;">
                            <i class="fa-solid fa-check-circle me-2"></i> Change Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3 text-center">
        @ViewData["ErrorMessage"]
    </div>
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3 text-center">
        @ViewData["SuccessMessage"]
    </div>
}

<!-- Fade-In Animation Script -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const fadeInElements = document.querySelectorAll('.fade-in');
        fadeInElements.forEach(el => {
            el.style.opacity = 0;
            el.style.transform = 'translateY(10px)';
            setTimeout(() => {
                el.style.transition = 'opacity 0.8s ease-in-out, transform 0.8s ease-in-out';
                el.style.opacity = 1;
                el.style.transform = 'translateY(0)';
            }, 100);
        });
    });
    // Show/Hide Password
    function togglePasswordVisibility(fieldId, toggleIcon) {
        const passwordField = document.getElementById(fieldId);
        const icon = toggleIcon.querySelector("i");
        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.classList.remove("bx-hide");
            icon.classList.add("bx-show");
        } else {
            passwordField.type = "password";
            icon.classList.remove("bx-show");
            icon.classList.add("bx-hide");
        }
    }
</script>

<!-- Custom Styling -->
<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #495057;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 8px;
        font-size: 1rem;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        border-color: #80bdff;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }

    .fw-semibold {
        font-weight: 600;
    }

    .alert {
        font-size: 1.1rem;
        border-radius: 8px;
    }

    .fade-in {
        opacity: 0;
        transform: translateY(10px);
    }

    /* Toggle Password Visibility Button */
    .toggle-password {
        position: absolute;
        top: 50%; /* Center vertically */
        right: 15px;
        margin-top: 12px;
        transform: translateY(-50%); /* Align with middle of input field */
        cursor: pointer;
        color: #333;
        font-size: 1.2rem;
        transition: color 0.2s ease-in-out;
    }

        /* Hover effect for icon */
        .toggle-password:hover {
            color: #4a90e2; /* Change color on hover */
        }

        /* Icon Styling */
        .toggle-password i {
            display: inline-block;
            font-size: 1.5rem;
        }

    /* Adjustments for mobile devices */
  

</style>
